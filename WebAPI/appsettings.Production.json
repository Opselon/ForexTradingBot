{
    "AppInfo": {
        "Version": "#{APP_VERSION}#",
        "Environment": "Production",
        "DeploymentDate": "2025-06-09 15:52:51",
        "LastDeployedBy": "Opselon"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.Hosting.Lifetime": "Information",
            "Microsoft.EntityFrameworkCore": "Warning"
        },
        "ApplicationInsights": {
            "LogLevel": {
                "Default": "Information"
            }
        },
        "File": {
            "Path": "C:\\Apps\\ForexTradingBot\\Logs\\app-{Date}.log",
            "FileSizeLimitBytes": 10485760,
            "RetainedFileCountLimit": 10
        }
    },
    "HealthChecks": {
        "Enabled": true,
        "Path": "/health",
        "Port": 5000
    },
    "DatabaseSettings": {
        "DatabaseProvider": "SqlServer",
        "EnableDetailedErrors": false,
        "EnableSensitiveDataLogging": false,
        "CommandTimeout": 30
    },
    "ConnectionStrings": {
        "DefaultConnection": "#{ConnectionString}#",
        "ApplicationInsights": "#{APP_INSIGHTS_CONNECTION_STRING}#"
    },
    "TelegramPanel": {
        "BotToken": "#{TelegramBotToken}#",
        "UseWebhook": false,
        "EnableDebugMode": false,
        "RetryPolicy": {
            "MaxRetries": 3,
            "DelaySeconds": 2
        }
    },
    "TelegramUserApi": {
        "ApiId": "#{TelegramApiId}#",
        "ApiHash": "#{TelegramApiHash}#",
        "PhoneNumber": "#{TelegramPhoneNumber}#",
        "SessionPath": "C:\\Apps\\ForexTradingBot\\Session\\telegram_user.session",
        "VerificationCodeSource": "Disabled",
        "TwoFactorPasswordSource": "Disabled",
        "ConnectionTimeout": 30,
        "RetryPolicy": {
            "Enabled": true,
            "MaxAttempts": 3,
            "DelaySeconds": 5
        }
    },
    "CryptoPay": {
        "ApiToken": "#{CryptoPayApiToken}#",
        "IsTestnet": false,
        "TimeoutSeconds": 30,
        "RetryPolicy": {
            "Enabled": true,
            "MaxRetries": 3,
            "DelaySeconds": 2
        }
    },
    "Performance": {
        "CacheEnabled": true,
        "CacheExpirationMinutes": 15,
        "MaxConcurrentOperations": 100
    },
    "Security": {
        "EnableRequestRateLimit": true,
        "MaxRequestsPerMinute": 300,
        "IpRateLimiting": {
            "EnableEndpointRateLimiting": true,
            "StackBlockedRequests": false,
            "RealIpHeader": "X-Real-IP",
            "ClientIdHeader": "X-ClientId",
            "HttpStatusCode": 429
        }
    }
}