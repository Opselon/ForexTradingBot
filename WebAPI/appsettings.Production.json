{
    // =================================================================================
    // Logging Configuration for Production
    // In production, we log less information to improve performance.
    // We only care about Information, Warnings, Errors, and Critical failures.
    // =================================================================================
    "Logging": {
        "LogLevel": {
            "Default": "Information", // Changed from "Debug" to "Information"
            "Microsoft.AspNetCore": "Warning" // We don't need to see every single web request
        }
    },

    // =================================================================================
    // Database Configuration for Production
    // This points to your live production database.
    // The value will be injected securely from GitHub Secrets.
    // =================================================================================
    "ConnectionStrings": {
        "DefaultConnection": "#{ConnectionString}#"
    },

    // =================================================================================
    // Telegram Panel Configuration for Production
    // We switch to polling mode and use the real production bot token.
    // =================================================================================
    "TelegramPanel": {
        "BotToken": "#{TelegramBotToken}#",
        "UseWebhook": false, // CRITICAL: Set to false for polling on a Windows Service
        "EnableDebugMode": false // Disable debug mode for production performance
    },

    // =================================================================================
    // Telegram User API Configuration for Production
    // These are your personal account credentials for using the user-level API.
    // They will be injected securely from GitHub Secrets.
    // =================================================================================
    "TelegramUserApi": {
        "ApiId": "#{TelegramApiId}#",
        "ApiHash": "#{TelegramApiHash}#",
        "PhoneNumber": "#{TelegramPhoneNumber}#",
        "SessionPath": "C:\\Apps\\ForexTradingBot\\Session\\telegram_user.session",

        // ✅ CORRECTED: Must be 'Disabled' for automated, non-interactive deployments.
        // The code will rely on the SessionPath to log in automatically.
        "VerificationCodeSource": "Disabled",
        "TwoFactorPasswordSource": "Disabled"
    },
    // --- THIS SECTION IS LIKELY MISSING OR INCOMPLETE ---
    "DatabaseSettings": {
        "DatabaseProvider": "SqlServer" // Or "PostgreSQL", "Sqlite", etc.
    },
    // =================================================================================
    // CryptoPay Configuration for Production
    // Switch from testnet to the real payment gateway.
    // =================================================================================
    "CryptoPay": {
        "ApiToken": "#{CryptoPayApiToken}#",
        "IsTestnet": false // Switch to the live network for real payments
    }
}