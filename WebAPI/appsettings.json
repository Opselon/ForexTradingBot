{
    // =================================================================================
    // Logging Configuration
    // تنظیمات مربوط به نحوه و سطح لاگ‌برداری در برنامه.
    // =================================================================================
    "Logging": {
        "LogLevel": {
            // سطح لاگ پیش‌فرض برای تمام Category ها. مقادیر ممکن: Trace, Debug, Information, Warning, Error, Critical, None.
            "Default": "Information",
            // سطح لاگ خاص برای Category هایی که با "Microsoft.AspNetCore" شروع می‌شوند (مثلاً لاگ‌های مربوط به ASP.NET Core).
            "Microsoft.AspNetCore": "Warning"
        }
    },

    // =================================================================================
    // Kestrel Server Configuration (ASP.NET Core specific)
    // میزبان‌های مجازی که برنامه به درخواست‌های آن‌ها پاسخ می‌دهد. "*" یعنی تمام میزبان‌ها.
    // =================================================================================
    "AllowedHosts": "*",

    // =================================================================================
    // Database Configuration
    // تنظیمات مربوط به اتصال به پایگاه داده.
    // =================================================================================
    "DatabaseProvider": "SqlServer",
    "ConnectionStrings": {
        // PRODUCTION NOTE: Never store production connection strings directly in appsettings.json
        // Use Azure Key Vault, AWS Secrets Manager, HashiCorp Vault, or environment variables.
        // The password should ideally come from environment variables or a secure secret manager.
        "DefaultConnection": "Server=localhost;Database=ForexBotDb;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=False;TrustServerCertificate=False;"
    },

    // =================================================================================
    // Telegram Panel Configuration
    // تنظیمات اختصاصی برای پنل/ربات تلگرام.
    // =================================================================================
    "TelegramPanel": {
        // PRODUCTION NOTE: Bot tokens should be loaded from environment variables or a secret manager.
        // e.g., Environment.GetEnvironmentVariable("TELEGRAM_BOT_TOKEN")
        "BotToken": "YOUR_TELEGRAM_BOT_TOKEN_HERE",
        "UseWebhook": true,
        // PRODUCTION NOTE: Webhook addresses often expose your server's endpoint.
        // For ngrok or similar tunnels, the URL changes. For production, use a stable, publicly accessible HTTPS URL.
        "WebhookAddress": "YOUR_WEBHOOK_PUBLIC_URL_HERE",
        // PRODUCTION NOTE: Webhook secret token should be a strong, randomly generated string.
        "WebhookSecretToken": "YOUR_WEBHOOK_SECRET_TOKEN_HERE",
        "PollingInterval": 0,
        // PRODUCTION NOTE: Admin user IDs should be loaded from secure configuration/database if many.
        "AdminUserIds": [ "0000000000" ], // Placeholder for sensitive admin IDs
        "EnableDebugMode": false // Consider disabling debug mode in production
    },

    // =================================================================================
    // Telegram User API Configuration
    // تنظیمات برای API User (نه ربات) تلگرام.
    // =================================================================================
    "TelegramUserApi": {
        // PRODUCTION NOTE: API_ID, API_HASH, Phone Number are highly sensitive.
        // Load these from secure environment variables or a secret manager.
        "ApiId": "00000000", // Placeholder for your Telegram API ID
        "ApiHash": "YOUR_TELEGRAM_API_HASH_HERE", // Placeholder for your Telegram API Hash
        "PhoneNumber": "+989999999999", // Placeholder for your phone number
        "SessionPath": "telegram_user.session", // This path might contain sensitive session data, protect access to it.
        "VerificationCodeSource": "Console", // Consider secure methods for prod, e.g., callback, API
        "BotToken": "YOUR_USER_API_ASSISTANT_BOT_TOKEN_HERE", // If the user API also has a linked bot
        "TwoFactorPasswordSource": "Console" // Consider secure methods for prod
    },

    // =================================================================================
    // Crypto Pay Configuration
    // تنظیمات مربوط به سرویس Crypto Pay.
    // =================================================================================
    "CryptoPay": {
        // PRODUCTION NOTE: Crypto Pay API Token is extremely sensitive.
        // Load this from environment variables or a secret manager.
        "ApiToken": "YOUR_CRYPTOPAY_API_TOKEN_HERE",
        "BaseUrl": "https://pay.crypt.bot/api/",
        "IsTestnet": true, // Always false for production
        // PRODUCTION NOTE: Webhook Secret for CryptoPay should be a strong, random string.
        "WebhookSecretForCryptoPay": "YOUR_CRYPTOPAY_WEBHOOK_SECRET_HERE"
    },

    // =================================================================================
    // Forwarding Rules Configuration (For example or small scale rules)
    // For large-scale or dynamic rules, prefer storing these in a database.
    // =================================================================================
    "ForwardingRules": [
        {
            // PRODUCTION NOTE: Bot tokens used in specific rules are highly sensitive.
            // If rules involve bot tokens, load them securely.
            "BotToken": "BOT_TOKEN_FOR_RULE_1_HERE",
            // Numeric Channel IDs themselves are less sensitive but represent targets.
            "SourceChannelId": -1000000000000,
            "TargetChannelId": -1000000000000,
            "IsEnabled": true,
            "EditOptions": {
                "AppendText": "\n\nForwarded by YOUR_BOT_NAME", // Customizable text, may include non-sensitive names
                "ReplaceText": [
                    {
                        "Find": "SomeOldText",
                        "ReplaceWith": "SomeNewText"
                    }
                ],
                "RemoveLinks": false,
                "AllowedMessageTypes": [ "Text", "Photo", "Video" ]
            }
        }
        // ... Other forwarding rules (sanitized similarly) ...
    ],

    // =================================================================================
    // Hangfire Settings
    // تنظیمات برای کتابخانه زمانبندی و پردازش پس‌زمینه Hangfire.
    // =================================================================================
    "HangfireSettings": {
        "StorageType": "Memory" // For production, this should be "SqlServer" or "Postgres"
        // If "SqlServer" or "Postgres" is chosen, configure the ConnectionString in a secure way (e.g., from env variables)
        // "ConnectionString": "Data Source=YOUR_DB_SERVER;Initial Catalog=HangfireDB;Integrated Security=True" 
    }
}