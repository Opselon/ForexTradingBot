{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "DatabaseProvider": "SqlServer",
    "ConnectionStrings": {
        "DefaultConnection": "Server=localhost;Database=ForexBotDb;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=False;TrustServerCertificate=False;"
    },
    "TelegramPanel": {
        "BotToken": "YOUR_TELEGRAM_BOT_TOKEN",
        "UseWebhook": true,
        "WebhookAddress": "https://your-webhook-url.com/api/telegramwebhook",
        "WebhookSecretToken": "YOUR_WEBHOOK_SECRET_TOKEN",
        "PollingInterval": 0,
        "AdminUserIds": [ 123456789 ],
        "EnableDebugMode": true
    },
    "TelegramUserApi": {
        "ApiId": 123456,
        "ApiHash": "YOUR_API_HASH",
        "PhoneNumber": "+00000000000",
        "SessionPath": "telegram_user.session",
        "VerificationCodeSource": "Console",
        "BotToken": "YOUR_SECONDARY_BOT_TOKEN",
        "TwoFactorPasswordSource": "Console"
    },
    "CryptoPay": {
        "ApiToken": "YOUR_CRYPTOPAY_API_TOKEN",
        "BaseUrl": "https://pay.crypt.bot/api/",
        "IsTestnet": true,
        "WebhookSecretForCryptoPay": "YOUR_CRYPTOPAY_WEBHOOK_SECRET"
    },
    "ForwardingRules": [
        {
            "BotToken": "YOUR_FORWARDING_BOT_TOKEN",
            "SourceChannelId": -1000000000000,
            "TargetChannelId": -1000000000001,
            "IsEnabled": true,
            "EditOptions": {
                "AppendText": "\n\nForwarded by MyBot",
                "ReplaceText": [
                    {
                        "Find": "OldText",
                        "ReplaceWith": "NewText"
                    }
                ],
                "RemoveLinks": false,
                "AllowedMessageTypes": [ "Text", "Photo", "Video" ]
            }
        }
    ]
}
