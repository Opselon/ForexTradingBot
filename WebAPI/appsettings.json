{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "DatabaseProvider": "SqlServer",
    "ConnectionStrings": {
        "DefaultConnection": "Server=localhost;Database=ForexBotDb;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=False;TrustServerCertificate=False;"
    },
    "TelegramPanel": {
        "BotToken": "YOUR_TELEGRAM_BOT_TOKEN",
        "UseWebhook": true,
        "WebhookAddress": "YOUR_WEBHOOK_URL",
        "WebhookSecretToken": "YOUR_WEBHOOK_SECRET",
        "PollingInterval": 0,
        "AdminUserIds": [
            123456789
        ],
        "EnableDebugMode": true
    },
    "TelegramUserApi": {
        "ApiId": 0,
        "ApiHash": "YOUR_TELEGRAM_API_HASH",
        "PhoneNumber": "YOUR_PHONE_NUMBER",
        "SessionPath": "telegram_user.session",
        "VerificationCodeSource": "Console",
        "BotToken": "YOUR_TELEGRAM_BOT_TOKEN_FOR_USER_API",
        "TwoFactorPasswordSource": "Console"
    },
    "CryptoPay": {
        "ApiToken": "YOUR_CRYPTOPAY_API_TOKEN",
        "BaseUrl": "https://pay.crypt.bot/api/",
        "IsTestnet": true,
        "WebhookSecretForCryptoPay": "YOUR_CRYPTOPAY_WEBHOOK_SECRET"
    },
    "ForwardingRules": [
        {
            "BotToken": "YOUR_FORWARDER_BOT_TOKEN",
            "SourceChannelId": -1000000000000,
            "TargetChannelId": -1000000000000,
            "IsEnabled": true,
            "EditOptions": {
                "AppendText": "\n\nForwarded by MyBot",
                "ReplaceText": [
                    {
                        "Find": "OldText",
                        "ReplaceWith": "NewText"
                    }
                ],
                "RemoveLinks": false,
                "AllowedMessageTypes": [
                    "Text",
                    "Photo",
                    "Video"
                ]
            }
        }
    ],
    "HangfireSettings": {
        "StorageType": "SqlServer"
    }
}